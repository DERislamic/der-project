{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["./scripts/**/*.ts", "./tests/**/*.ts", "./wrappers/**/*.ts"],
  "exclude": ["node_modules"]
}
